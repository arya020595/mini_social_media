datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts Post[]
  likes Like[]
}

model Post {
  id        Int      @default(autoincrement()) @id
  caption   String
  tags      String
  image     String
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
  likes     Like[]
}

model Like {
  id        Int      @default(autoincrement()) @id
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
  post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?
}